{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "notia",
  "version": "1.1.2",
  "identifier": "com.notia.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Notia",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://*.supabase.co data: blob:; connect-src 'self' https://*.supabase.co wss://*.supabase.co ws://localhost:1420; style-src 'self' 'unsafe-inline'; script-src 'self';"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM1NzhEMUE2NDdCOEFERDUKUldUVnJiaEhwdEY0eGZ3cTVzWkFaMjYrVm9LOHJhN3AyMERuZUUvdkFvTEEzeWxlSThqNmh6SFgK",
      "endpoints": [
        "https://github.com/qetqet910/notia/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
