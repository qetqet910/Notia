    "dev:tauri": "vite --mode tauri",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 tsc && vite build",
    "build:web": "cross-env NODE_OPTIONS=--max-old-space-size=2048 tsc && vite build",
    "build:tauri": "cross-env NODE_OPTIONS=--max-old-space-size=1536 tsc --skipLibCheck && vite build --mode tauri",
