    "build:extension": "cross-env NODE_OPTIONS=--max-old-space-size=4096 tsc && cross-env VITE_PLATFORM=extension vite build",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "analyze": "vite build --report",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run build:tauri && tauri build",
    "test": "vitest"
